<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/harrypotter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.ChangePasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="Sifre Guncelleme"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/headTextView"
                android:layout_marginTop="50dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:layout_above="@id/init_button"
                android:layout_centerHorizontal="true"
                android:textSize="50sp"
                app:fontFamily="@font/harry_potter" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Mevcut Şifre"
                android:textColor="@color/white"
                android:textColorHint="@color/cardview_light_background"
                android:ems="10"
                android:id="@+id/currentPassword" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Yeni Şifre"
                android:textColor="@color/white"
                android:textColorHint="@color/cardview_light_background"
                android:ems="10"
                android:id="@+id/newPassword" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Yeni Şifre Tekrar"
                android:textColor="@color/white"
                android:textColorHint="@color/cardview_light_background"
                android:ems="10"
                android:id="@+id/newConfirmPassword" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/changePasswordButton"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/harry_potter"
                    android:text="GUNCELLE"
                    android:textSize="20sp"
                    android:typeface="normal"
                    app:strokeColor="#FBFBFB"
                    app:strokeWidth="2dp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
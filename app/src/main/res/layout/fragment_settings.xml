<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/harrypotter"
    android:layout_height="match_parent">

    <TextView
        android:text="Ayarlar"
        android:textColor="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:gravity="center"
        android:textSize="36sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        app:fontFamily="@font/harry_potter"
        android:layout_marginTop="74dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingBottom="100dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:paddingRight="10dp" android:layout_alignParentLeft="true"
            android:layout_centerVertical="false" android:paddingLeft="60dp" android:id="@+id/grid_size_layout"
            android:layout_alignTop="@id/speed_layout">
            <TextView
                android:text="Zorluk"
                android:fontFamily="@font/harry_potter"
                android:textColor="@color/cardview_light_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                style="@style/Base.TextAppearance.AppCompat.Title"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/grid_size_spinner">
                <RadioButton
                    android:text="Kolay"
                    android:textColor="@color/cardview_light_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/two_radiobutton"/>
                <RadioButton
                    android:text="Orta"
                    android:textColor="@color/cardview_light_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/four_radiobutton"/>
                <RadioButton
                    android:text="Zor"
                    android:textColor="@color/cardview_light_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/six_radiobutton"/>
            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerVertical="false"
            android:layout_alignParentRight="true" android:paddingRight="60dp" android:id="@+id/speed_layout">
            <TextView
                android:text="Oyun Modu"
                android:fontFamily="@font/harry_potter"
                android:textColor="@color/cardview_light_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView"
                style="@style/Base.TextAppearance.AppCompat.Title"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/difficulty_radiogroup">
                <RadioButton
                    android:text="Tek Oyunculu"
                    android:textColor="@color/cardview_light_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/onePlayer_radiobutton"/>
                <RadioButton
                    android:text="Ä°ki Oyunculu"
                    android:textColor="@color/cardview_light_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/twoPlayer_radiobutton"/>

            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>

    <Button

        android:id="@+id/start_game_button"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="283dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="-501dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="59dp"
        android:fontFamily="@font/harry_potter"
        android:text="BASLA"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        app:strokeColor="#EAEAEA"
        app:strokeWidth="4dp" />

</RelativeLayout>